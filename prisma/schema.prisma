generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE
  UNDERMAINTAINANCE
  RETIRED
}

enum Role {
  DRIVER
  MECHANIC
  OWNER
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique 
  password  String
  firstName String
  lastname  String?
  role      Role?
  vechile   Vechile[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vechile {
  id                 Int      @id @default(autoincrement())
  model              String
  buildYear          DateTime
  buyYear            DateTime
  registrationNumber String   @unique
  currentStatus      Status   @default(ACTIVE)
  location           String
  owner              User     @relation(fields: [ownerId], references: [id])
  ownerId            Int      @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
